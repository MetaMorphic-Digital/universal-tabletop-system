<header class="sheet-header flexrow">
  <img
    class="profile-img"
    src="{{item.img}}"
    {{#if editable}}
    data-action="editImage"
    data-edit="img"
    {{/if}}
    data-tooltip="{{item.name}}"
    height="100" width="100"
    alt="{{item.name}}"
  >
  {{formInput itemFields.name value=item.name}}
</header>
