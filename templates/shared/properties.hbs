<section class="standard-form tab scrollable {{tab.cssClass}}" data-group="primary" data-tab="properties">
  {{#each fields}}
  {{#if fieldset}}
  <fieldset>
    <legend>{{localize legend}}</legend>
    {{#each fields}}
    {{formGroup field value=value localize=true}}
    {{/each}}
  </fieldset>
  {{else}}
  {{formGroup outer.field value=outer.value localize=true}}
  {{/if}}
  {{/each}}
</section>
